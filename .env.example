# Copy this file to .env and fill in the values before starting TavernRegister
# Required settings for SillyTavern connectivity
SILLYTAVERN_BASE_URL=http://localhost:8000
SILLYTAVERN_ADMIN_HANDLE=admin
SILLYTAVERN_ADMIN_PASSWORD=change-me
PORT=3070

# Optional OAuth provider configuration (GitHub)
# If all three values are present, the GitHub button appears on the registration page.
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3070/oauth/github/callback
